---
import TagList from "./TagList.astro";

const { title, date, slug, description, tags } = Astro.props;

const link = `/blog/${slug}`;

const postDate = date.toLocaleDateString("en-uk", {
  day: "numeric",
  month: "short",
  year: "numeric",
});
---

<article class="post-card">
  <header>
    <a href={link}>
      <h3 class="title">
        {title}
      </h3>
      <time class="date">{postDate}</time>
    </a>
  </header>
  <div class="resume">
    <p>{description}</p>
    <a href={link} class="link">Read more <span>&#8594</span></a>
  </div>
  <TagList tags={tags} />
</article>

<style scoped>
  .post-card {
    margin-bottom: var(--space-extra-large);
  }
  .resume {
    margin-bottom: var(--space-small);
  }
  .title {
    margin-bottom: var(--space-xxs);
  }

  a {
    font-style: normal;
    color: var(--primary-font-color);
  }

  .date {
    display: block;
    margin-bottom: var(--space-medium);
    color: var(--secondary-color);
  }
  .link {
    margin-bottom: var(--space-medium);
    color: var(--highligth-color);
  }
</style>
