---
import TagList from "./TagList.astro";
import HorizontalLine from "./horizontalLine.astro";

const { title, date, slug, description, tags } = Astro.props;

const link = `/blog/${slug}`;

const postDate = date.toLocaleDateString("en-uk", {
  day: "numeric",
  month: "short",
  year: "numeric",
});
---

<article class="post-card">
  <header>
    <h2>
      <a class="title" href={link}>
        {title}
      </a>
    </h2>
    <time>{postDate}</time>
  </header>
  <p class="description">{description}</p>
  <footer>
    <p>
      <a href={link}>Read more</a>
      <span class="link">&#8594</span>
    </p>

    <TagList tags={tags} />
  </footer>
  <HorizontalLine />
</article>

<style scoped>
  article {
    margin-block-end: var(--space-large);
  }

  header {
    display: flex;
    flex-direction: column;
    gap: var(--space-small);
    padding-block-start: var(--space-medium);
  }

  time {
    color: var(--base-color-grey);
  }

  .description {
    margin-block-end: var(--space-small);
    padding-top: var(--space-medium);
  }

  footer {
    display: flex;
    flex-direction: column;
    gap: var(--space-small);
    margin-block-end: var(--space-large);
  }

  span {
    font-size: var(--font-size-2);
  }

  a,
  span {
    font-weight: bold;
  }

  a:hover {
    color: var(--base-color-grey);
  }

  p .link {
    visibility: hidden;
  }

  p:hover .link {
    visibility: visible;
  }
</style>
