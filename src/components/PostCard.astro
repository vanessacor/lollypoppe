---
import TagList from "./TagList.astro";
import HorizontalLine from "./horizontalLine.astro";

const { title, date, slug, description, tags } = Astro.props;

const link = `/blog/${slug}`;

const postDate = date.toLocaleDateString("en-uk", {
  day: "numeric",
  month: "short",
  year: "numeric",
});
---

<article class="post-card">
  <header>
    <h2>
      <a class="title" href={link}>
        {title}
      </a>
    </h2>
    <time>{postDate}</time>
  </header>
  <p class="description">{description}</p>
  <footer>
    <p>
      <a href={link}>Read more</a>
      <span class="link">&#8594</span>
    </p>

    <TagList tags={tags} />
  </footer>
  <HorizontalLine />
</article>

