---
import type { CollectionEntry } from "astro:content";
import Markdown from "./MarkdownComponent.astro";
interface Props {
  job: CollectionEntry<"work">;
}

const { job } = Astro.props;
const { Content } = await job.render();
---

<article class="job">
  <header>
    <h3 class="title">
      {job.data.company} ({job.data.location})<span>
        - {job.data.jobTitle}</span
      >
    </h3>
    <p class="dates">{job.data.dates}</p>
  </header>

  <Markdown>
    <Content />
  </Markdown>
</article>

<style scoped>

  .job {
    margin-bottom: var(--space-extra-large);
  }
  header {
    margin-bottom: var(--space-medium);
  }
  .title {
    font-weight: bolder;
    font-style: italic;
    margin-bottom: var(--space-xxs);
  }
  .dates {
    line-height: 1em;
    font-size: var(--font-size-4);
    color: var(--secondary-color);
  }
</style>
