---
import linkedin from "/assets/icons/linkedin.svg?raw";
import github from "/assets/icons/github.svg?raw";
---

<div class="page-footer container">
  <ul class="links">
    <li>
      <a
        target="_blank"
        href="https://www.linkedin.com/in/vanessapoppe/"
        aria-label="linkedin-profile"
        title="linkedin-profile"
      >
        <Fragment set:html={linkedin} class="icons" />
        <span>My linkedin</span>
      </a>
    </li>
    <li>
      <a
        target="_blank"
        href="https://github.com/vanessacor"
        aria-label="github-profile"
        title="github-profile"
      >
        <Fragment set:html={github} aria-hidden="true" focusable="false" />
        <span>My code</span>
      </a>
    </li>
  </ul>
</div>
<style scoped>
  .page-footer {
    margin: 0 auto;
    padding-top: var(--space-extra-large);
    padding-bottom: var(--space-extra-large);
  }
  .links {
    display: flex;
    justify-content: space-around;
  }

  a {
    display: flex;
    gap: var(--space-small);
    align-items: center;
  }
</style>
