---
import { getTags } from "../../helpers/getTags";
import TagItem from "./TagItem.astro";
const tags = await getTags();

const tagsElement = tags.map((tag) => ({ label: tag, url: `/tags/${tag}` }));
---

<div class="side-bar">
  <section>
    <p>tags 🏷️</p>
    <ul class="tags">
      {tagsElement.map((tag) => <TagItem tag={tag} />)}
    </ul>
  </section>
  <section>
    <p>Weekly Reading 📰</p>
    <ul class="readings">
      <li>
        <a
          data-external="external"
          href="https://www.ben-morris.com/enterprise-architecture-anti-patterns/"
        >
          Enterprise Architecture anti-patterns
        </a>
      </li>
    </ul>
  </section>
  <section>
    <p>Bedside table 📖</p>
    <ul class="readings">
      <li>
        <span>
          <a
            data-external="external"
            href="https://search.worldcat.org/title/123113472"
          >
            Giovanni's room
          </a>
        </span>
      </li>
    </ul>
  </section>
</div>
<style scoped>
  .side-bar {
    display: none;
  }

  @media (min-width: 1200px) {
    .side-bar {
      display: flex;
      flex-direction: column;
      row-gap: var(--space-large);
    }
  }

  .tags {
    display: flex;
    column-gap: var(--space-small);
    flex-wrap: wrap;
  }

  .readings {
    display: flex;
    flex-direction: column;
    gap: var(--space-small);
  }
  .readings a {
    font-size: var(--font-size-4);
  }
</style>
