---
import type { CollectionEntry } from "astro:content";
import TagList from "./TagList.astro";
import HorizontalLine from "./horizontalLine.astro";
import Markdown from "./markdown.astro";
interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<article class="project">
  <header>
    <h2 class="title">
      <a href={project.data.link}>
        {project.data.title}
      </a>
    </h2>
    <a class="image" href={project.data.link}>
      <img src={project.data.image} />
    </a>
    <div class="links">
      <a href={project.data.link}>Deploy in {project.data.deploy}</a>
      <a href={project.data.gitHubLink}>View Code</a>
    </div>
  </header>

  <Markdown>
    <Content />
  </Markdown>

  <footer>
    <TagList tags={project.data.tags} />
  </footer>

  <HorizontalLine />
</article>

<style></style>
