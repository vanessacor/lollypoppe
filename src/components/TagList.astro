---
const { tags } = Astro.props;
---

<ul class="tags">
  {tags.map((tag: string) => <li class="tag">{tag}</li>)}
</ul>
<style scoped>
  .tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    padding-left: 5px;
    list-style: none;
    gap: var(--space-small);
    margin-block-end: var(--space-extra-large);
  }

  .tag {
    position: relative;
  }

  .tag:before {
    content: " ";
    position: absolute;
    top: 50%;
    right: 12%;
    z-index: -1;
    height: 80%;
    width: 100%;
    background-color: var(--highlight-color);
  }
</style>
